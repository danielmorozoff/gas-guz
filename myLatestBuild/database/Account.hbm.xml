<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="com.gasguz.model">
  <class name="Account" table="GG_ACCOUNT" mutable="false">
    <id name="id" type="long" column="ID">
      <generator class="identity"/>
    </id>

    <property name="username"       type="string" column="USERNAME" not-null="true" unique-key="GG_ACCOUNT_U01"/>
    <property name="password"       type="string" column="PASSWORD" not-null="true"/>
    <property name="fname"          type="string" column="FNAME" not-null="true"/>
    <property name="lname"          type="string" column="LNAME" not-null="true"/>
    <property name="email"          type="string" column="EMAIL" not-null="true"/>
    <property name="addDttm"        type="date" column="ADD_DTTM" not-null="true"/>
    <property name="lastupdateDTTM" type="date" column="LASTUPDATE_DTTM" not-null="true"/>

  </class>
</hibernate-mapping>
