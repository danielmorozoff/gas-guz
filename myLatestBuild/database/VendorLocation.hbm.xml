<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="com.gasguz.model">
  <class name="VendorLocation" table="GG_VENDOR_LOCATION" mutable="false">
    <id name="id" type="long" column="ID">
      <generator class="identity"/>
    </id>

    <property name="vendor_id"     type="long"   column="VENDOR_ID"     not-null="true"/>
    <property name="name"          type="string" column="NAME"          not-null="true"/>
    <property name="address"       type="string" column="ADDRESS"       not-null="true"/>
    <property name="phone"         type="string" column="PHONE"         not-null="true"/>
    <property name="status"        type="string" column="STATUS"        not-null="true"/>
    <property name="date_created"  type="date"   column="DATE_CREATED"  not-null="true"/>
    <property name="date_modified" type="date"   column="DATE_MODIFIED" not-null="true"/>

  </class>
</hibernate-mapping>
