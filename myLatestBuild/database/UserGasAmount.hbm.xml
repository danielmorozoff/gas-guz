<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="com.gasguz.model">
  <class name="UserGasAmount" table="GG_USER_GAS_AMOUNT" mutable="false">
    <id name="id" type="long" column="ID">
      <generator class="identity"/>
    </id>

    <property name="user_id"            type="long"        column="USER_ID"            not-null="true" unique-key="GG_USER_GAS_AMOUNT_U01"/>
    <property name="vendor_location_id" type="long"        column="VENDOR_LOCATION_ID" not-null="true" unique-key="GG_USER_GAS_AMOUNT_U01"/>
    <property name="gas_grade_id"       type="long"        column="GAS_GRADE_ID"       not-null="true" unique-key="GG_USER_GAS_AMOUNT_U01"/>
    <property name="amount"             type="big_decimal" column="AMOUNT"             not-null="true" precision="17" scale="3"/>
    <property name="date_created"       type="timestamp"   column="DATE_CREATED"       not-null="true"/>
    <property name="date_modified"      type="timestamp"   column="DATE_MODIFIED"      not-null="true"/>

  </class>
</hibernate-mapping>
