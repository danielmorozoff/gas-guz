<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="com.gasguz.model">
  <class name="AuthorizedUser" table="GG_AUTHORIZED_USER" mutable="false">
    <id name="id" type="long" column="ID">
      <generator class="identity"/>
    </id>

    <property name="userId"        type="long"      column="USER_ID"       not-null="true"/>
    <property name="fname"         type="string"    column="FNAME"         not-null="true"/>
    <property name="lname"         type="string"    column="LNAME"         not-null="true"/>
    <property name="pin"           type="string"    column="PIN"           not-null="true"/>
    <property name="date_created"  type="timestamp" column="DATE_CREATED"  not-null="true"/>
    <property name="date_modified" type="timestamp" column="DATE_MODIFIED" not-null="true"/>

  </class>
</hibernate-mapping>
