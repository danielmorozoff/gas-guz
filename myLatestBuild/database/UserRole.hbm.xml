<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="com.gasguz.model">
  <class name="UserRole" table="GG_USER_ROLE" mutable="false">
    <id name="id" type="long" column="ID">
      <generator class="identity"/>
    </id>

    <property name="userId"        type="long"   column="USER_ID"       not-null="true" unique-key="GG_USER_ROLE_U01"/>
    <property name="roleId"        type="long"   column="ROLE_ID"       not-null="true" unique-key="GG_USER_ROLE_U01"/>
    <property name="status"        type="string" column="STATUS"        not-null="true"/>
    <property name="date_created"  type="date"   column="DATE_CREATED"  not-null="true"/>
    <property name="date_modified" type="date"   column="DATE_MODIFIED" not-null="true"/>

  </class>
</hibernate-mapping>
