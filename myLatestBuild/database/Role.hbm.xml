<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="com.gasguz.model">
  <class name="Role" table="GG_ROLE" mutable="false">
    <id name="id" type="long" column="ID">
      <generator class="identity"/>
    </id>

    <property name="description"   type="string" column="DESCRIPTION"   not-null="true"/>
    <property name="status"        type="string" column="STATUS"        not-null="true"/>
    <property name="date_created"  type="date"   column="DATE_CREATED"  not-null="true"/>
    <property name="date_modified" type="date"   column="DATE_MODIFIED" not-null="true"/>

  </class>
</hibernate-mapping>
