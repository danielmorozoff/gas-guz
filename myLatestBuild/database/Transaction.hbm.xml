<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="com.gasguz.model">
  <class name="Transaction" table="GG_TRANSACTION" mutable="false">
    <id name="id" type="long" column="ID">
      <generator class="identity"/>
    </id>

    <property name="user_id"            type="long"        column="USER_ID"            not-null="true"/>
    <property name="vendor_location_id" type="long"        column="VENDOR_LOCATION_ID" not-null="true"/>
    <property name="gas_grade_id"       type="long"        column="GAS_GRADE_ID"       not-null="true"/>
    <property name="cost"               type="big_decimal" column="COST"               not-null="false" precision="17" scale="3"/>
    <property name="amount"             type="big_decimal" column="AMOUNT"             not-null="true"  precision="17" scale="3"/>
    <property name="transaction_type"   type="string"      column="TRANSACTION_TYPE"   not-null="true"/>
    <property name="transaction_date"   type="timestamp"   column="TRANSACTION_DATE"   not-null="true"/>
    <property name="date_created"       type="timestamp"   column="DATE_CREATED"       not-null="true"/>
    <property name="date_modified"      type="timestamp"   column="DATE_MODIFIED"      not-null="true"/>

  </class>
</hibernate-mapping>
