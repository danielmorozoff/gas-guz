<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="com.gasguz.model">
  <class name="User" table="GG_USER" mutable="false">
    <id name="id" type="long" column="ID">
      <generator class="identity"/>
    </id>

    <property name="username"      type="string"    column="USERNAME"      not-null="true" unique-key="GG_USER_U01"/>
    <property name="password"      type="string"    column="PASSWORD"      not-null="true"/>
    <property name="fname"         type="string"    column="FNAME"         not-null="true"/>
    <property name="lname"         type="string"    column="LNAME"         not-null="true"/>
    <property name="email"         type="string"    column="EMAIL"         not-null="true"/>
    <property name="phone"         type="string"    column="PHONE"         not-null="true"/>
    <property name="status"        type="string"    column="STATUS"        not-null="true"/>
    <property name="date_created"  type="timestamp" column="DATE_CREATED"  not-null="true"/>
    <property name="date_modified" type="timestamp" column="DATE_MODIFIED" not-null="true"/>

  </class>
</hibernate-mapping>
