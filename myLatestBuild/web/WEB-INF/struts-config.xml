<?xml version="1.0" encoding="ISO-8859-1" ?>
  <!DOCTYPE struts-config PUBLIC
            "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
            "http://struts.apache.org/dtds/struts-config_1_2.dtd">
<struts-config>
  <!-- ========== Form Bean Definitions ===================================	-->
  <form-beans>
 	<form-bean name="ajaxForm" type="org.apache.struts.action.DynaActionForm">
      <form-property name="ajaxObj" type="java.lang.String" />
    </form-bean>
  
    <form-bean name="logonForm" type="org.apache.struts.action.DynaActionForm">
      <form-property name="username" type="java.lang.String" />
      <form-property name="password" type="java.lang.String" />
    </form-bean>

    <form-bean name="userForm" type="com.gasguz.model.mybatis.User"/>
  </form-beans>

  <!-- ========== Global Exceptions ============================== -->
  <global-exceptions>
    <exception key="java.lang.Throwable" path="/WEB-INF/jsp/error.jsp" scope="request" type="java.lang.Throwable" />
  </global-exceptions>

  <!-- ========== Global Forward Definitions ==============================	-->
  <global-forwards>
    <forward name="error-admin"    path=".admin.error"/>
    <forward name="error-customer" path=".customer.error"/>
    <forward name="error-vendor"   path=".vendor.error"/>
    <forward name="error"          path="/WEB-INF/jsp/error.jsp" />
  </global-forwards>

  <!-- ========== Action Mapping Definitions ==============================	-->
  <action-mappings>  

    <!-- ********************************************************************************************************************** -->
    <!-- *************************************************** Admin Actions **************************************************** -->
    <!-- ********************************************************************************************************************** -->

    <!-- Home -->
    <action path="/admin/Logon" forward=".admin.logon"/>
    <action path="/admin/logon" type="com.gasguz.action.admin.LogonAction" name="logonForm" validate="false" scope="request" parameter="method">
      <forward name="home"  path=".admin.home" />
    </action>

    
    <!-- ********************************************************************************************************************** -->
    <!-- *************************************************** Customer Actions ************************************************* -->
    <!-- ********************************************************************************************************************** -->
    <action path="/" forward=".customer.default"/>
	
    <action path="/customer/signup" type="com.gasguz.action.customer.CustomerAjaxAction" name="userForm" validate="false" scope="request" parameter="method"/>
  
  
    <!-- ********************************************************************************************************************** -->
    <!-- *************************************************** Vendor Actions *************************************************** -->
    <!-- ********************************************************************************************************************** -->

  </action-mappings>

  <!-- Turn off debug messages, indicate that Action.input is not a URI but a name of a forward element, ensure that responses are not cached -->
  <controller nocache="true"/>

  <message-resources parameter="ApplicationResources"/>

  <plug-in className="org.apache.struts.tiles.TilesPlugin">
    <set-property property="definitions-config" value="/WEB-INF/tiles-defs.xml" />
    <set-property property="moduleAware" value="true" />
  </plug-in>

</struts-config>
