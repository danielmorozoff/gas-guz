<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping package="com.gasguz.model">
  <class name="Account" table="GG_ACCOUNT" mutable="false">
    <id name="id" type="long" column="ID">
      <generator class="identity"/>
    </id>

    <property name="username"       type="string" column="USERNAME"/>
    <property name="password"       type="string" column="PASSWORD"/>
    <property name="lname"          type="string" column="LNAME"/>
    <property name="email"          type="string" column="EMAIL"/>
    <property name="addDttm"        type="date" column="ADD_DTTM"/>
    <property name="lastupdateDTTM" type="date" column="LASTUPDATE_DTTM"/>

  </class>
</hibernate-mapping>
