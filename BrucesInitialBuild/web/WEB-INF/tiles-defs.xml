<?xml version="1.0" encoding="UTF-8"?>
    <!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 1.3//EN"
       "http://struts.apache.org/dtds/tiles-config_1_3.dtd">

<tiles-definitions>
  <!-- ********************************************************************************************************************** -->
  <!-- *************************************************** MASTER LAYOUTS *************************************************** -->
  <!-- ********************************************************************************************************************** -->

  <definition name=".admin.masterLayout" template="/WEB-INF/jsp/admin/masterLayout.jsp" >
    <put name="title"      value="" />
    <put name="header"     value="/WEB-INF/jsp/admin/header.jsp" />    
    <put name="leftNav"    value="/WEB-INF/jsp/admin/leftNav.jsp" />    
    <put name="body"       value="" />
    <put name="errorMsg"   value="/WEB-INF/jsp/errorMsg.jsp" />
  </definition>
  <definition name=".customer.masterLayout" template="/WEB-INF/jsp/customer/masterLayout.jsp" >
    <put name="title"      value="" />
    <put name="header"     value="/WEB-INF/jsp/customer/header.jsp" />    
    <put name="leftNav"    value="/WEB-INF/jsp/customer/leftNav.jsp" />    
    <put name="body"       value="" />
    <put name="errorMsg"   value="/WEB-INF/jsp/errorMsg.jsp" />
  </definition>
  <definition name=".vendor.masterLayout" template="/WEB-INF/jsp/vendor/masterLayout.jsp" >
    <put name="title"      value="" />
    <put name="header"     value="/WEB-INF/jsp/vendor/header.jsp" />    
    <put name="leftNav"    value="/WEB-INF/jsp/vendor/leftNav.jsp" />    
    <put name="body"       value="" />
    <put name="errorMsg"   value="/WEB-INF/jsp/errorMsg.jsp" />
  </definition>

  <!-- ********************************************************************************************************************** -->
  <!-- *************************************************** ADMIN TILES ****************************************************** -->
  <!-- ********************************************************************************************************************** -->

  <!-- Admin Error tile -->
  <definition name=".admin.error" extends=".admin.masterLayout" >
    <put name="body" value="/WEB-INF/jsp/errorTile.jsp" />
  </definition>

  <!-- Admin logon tile -->
  <definition name=".admin.logon" extends=".admin.masterLayout" >
    <put name="body" value="/WEB-INF/jsp/admin/logon.jsp" />
  </definition>

  <!-- Admin Home landing tile -->
  <definition name=".admin.home" extends=".admin.masterLayout" >
    <put name="body" value="/WEB-INF/jsp/admin/home.jsp" />
  </definition>

  <!-- ********************************************************************************************************************** -->
  <!-- *************************************************** CUSTOMER TILES *************************************************** -->
  <!-- ********************************************************************************************************************** -->

  <!-- Customer Error tile -->
  <definition name=".customer.error" extends=".customer.masterLayout" >
    <put name="body" value="/WEB-INF/jsp/errorTile.jsp" />
  </definition>

  <definition name=".customer.home" extends=".customer.masterLayout" >
    <put name="body" value="/WEB-INF/jsp/customer/home.jsp" />
  </definition>


  <!-- ********************************************************************************************************************** -->
  <!-- *************************************************** VENDOR TILES ***************************************************** -->
  <!-- ********************************************************************************************************************** -->

  <!-- Vendor Error tile -->
  <definition name=".vendor.error" extends=".vendor.masterLayout" >
    <put name="body" value="/WEB-INF/jsp/errorTile.jsp" />
  </definition>

  <definition name=".vendor.home" extends=".vendor.masterLayout" >
    <put name="body" value="/WEB-INF/jsp/vendor/home.jsp" />
  </definition>

</tiles-definitions>